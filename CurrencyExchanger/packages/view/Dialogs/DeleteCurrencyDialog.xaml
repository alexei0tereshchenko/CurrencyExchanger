<mui:ModernDialog x:Class="CurrencyExchanger.packages.view.Dialogs.DeleteCurrencyDialog"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  mc:Ignorable="d"
                  d:DesignHeight="300" d:DesignWidth="300"
                  Title="Delete currency">

    <Grid>
        <StackPanel>
            <Label Content="Currency" Target="{Binding ElementName=CurrencyBox}" />
            <ComboBox Name="CurrencyBox" />
        </StackPanel>

        <Button Content="Submit" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="Submit_Click" />
        <Button Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Cancel_Click" />

    </Grid>


</mui:ModernDialog>